{
  "$schema": "https://json.schemastore.org/package",
  "name": "cdb-frontend",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0",
    "npm": ">=10.0"
  },
  "packageManager": "npm@10.11.0",
  "scripts": {
    "build": "npm run build:application && npm run build:server",
    "build:application": "react-router build",
    "build:server": "vite build --config ./vite.server.config.ts",
    "dev": "nodemon --config ./nodemon.json",
    "preview": "npm run build && cross-env NODE_ENV=production SESSION_COOKIE_SECURE=false node --env-file-if-exists=./.env --import ./build/server/telemetry.js ./build/server/server.js",
    "start": "cross-env NODE_ENV=production node --import ./build/server/telemetry.js ./build/server/server.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e-update-snapshots": "playwright test --update-snapshots",
    "format:check": "prettier --cache --cache-location ./node_modules/.cache/prettier/ --check ./",
    "format:write": "prettier --cache --cache-location ./node_modules/.cache/prettier/ --write ./",
    "lint:check": "eslint --cache --cache-location: ./node_modules/.cache/eslint/ ./",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@date-fns/utc": "^2.1.0",
    "@dts-stn/invariant": "^1.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.202.0",
    "@opentelemetry/otlp-exporter-base": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@react-router/express": "^7.6.2",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "clsx": "^2.1.1",
    "compression": "^1.8.0",
    "connect-redis": "^8.1.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "i18next": "^25.2.1",
    "i18next-fetch-backend": "^6.0.0",
    "ioredis": "^5.6.1",
    "isbot": "^5.1.28",
    "jose": "^6.0.11",
    "minimatch": "^10.0.3",
    "moderndash": "^4.0.0",
    "morgan": "^1.10.0",
    "oauth4webapi": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3",
    "react-idle-timer": "^5.7.2",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "undici": "^7.10.0",
    "valibot": "^1.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-error-format": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.0",
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/compression": "^1.8.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.32",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
